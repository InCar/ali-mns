{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "ts/",
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "dts"
    ]
}
