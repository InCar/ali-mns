{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "ts/",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "ts/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/*",
    "node_modules/@types/chai/index.d.ts",
    "dts"
  ]
}
